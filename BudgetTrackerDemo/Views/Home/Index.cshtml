@{
    ViewData["Title"] = "Welcome to Budget Tracker";
}

<div class="container text-center my-5">
    <!-- Hero Section -->
    <h1 class="display-4">Welcome to Budget Tracker</h1>
    <p class="lead text-muted">Easily track and manage your daily expenses with our simple and efficient budget tracker.</p>

    <!-- Features Section -->
    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card shadow p-3">
                <i class="fas fa-plus-circle fa-3x text-primary"></i>
                <h4 class="mt-3">Add Expenses</h4>
                <p>Quickly log your expenses and categorize them for better tracking.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow p-3">
                <i class="fas fa-edit fa-3x text-warning"></i>
                <h4 class="mt-3">Edit Transactions</h4>
                <p>Modify or update your expenses easily whenever needed.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow p-3">
                <i class="fas fa-trash-alt fa-3x text-danger"></i>
                <h4 class="mt-3">Delete Entries</h4>
                <p>Remove unwanted transactions with just a click if no more needed.</p>
            </div>
        </div>
    </div>

    <!-- CTA Button -->
    <div class="mt-5">
        <a class="btn btn-success btn-lg" asp-controller="Expenses" asp-action="Index">
            Start Tracking Now
        </a>
    </div>
</div>

