@model Expense
@{
    ViewData["Title"] = "Edit Expense";
}
<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="card shadow-lg p-4">
    <div class="card-body">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label class="form-label fw-bold">Name</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-receipt"></i></span>
                    <input asp-for="Name" class="form-control" placeholder="Enter expense name" required />
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Amount</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-dollar-sign"></i></span>
                    <input asp-for="Amount" type="number" class="form-control" placeholder="Enter amount" required />
                </div>
            </div>

            <div class="mb-3">
                <div class="form-group">
                    <label for="CategoryId" class="fw-bold">
                        Category
                    </label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-tags"></i></span>
                        <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories">
                            <option value="">-- Select Category --</option>
                        </select>
                    </div>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Date</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                    <input asp-for="Date" type="date" class="form-control" required />
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <button type="submit" class="btn btn-success px-4">
                    <i class="fas fa-save"></i>
                </button>
                <a class="btn btn-secondary px-4" asp-action="Index">
                    <i class="fas fa-arrow-left"></i>
                </a>
            </div>
        </form>
    </div>
</div>
